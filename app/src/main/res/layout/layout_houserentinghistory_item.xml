<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wholeLayout"
    tools:context=".Fragment.completedReviewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postDetails"
            android:layout_below="@+id/rela1"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imgProperty"
                android:src="@drawable/ic_home"
                >

            </ImageView>

            <TextView
                android:id="@+id/txtPropertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/imgProperty"
                android:layout_marginTop="4dp"
                android:text="PropertyName"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPropertyName"
                android:layout_marginTop="12dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/durationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPrice"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Duration:11-11-11 to 11-11-11"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rentingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/durationTxt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Status : completed / withdraw"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgViewLine"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_grey"
                android:layout_below="@id/toReviewBtn"
                android:textColor="@color/black"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>